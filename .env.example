# Wallai Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from: https://app.supabase.com/project/_/settings/api

# Supabase Project URL (public)
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co

# Supabase Anonymous Key (public, safe for frontend)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxx

# Supabase Service Role Key (secret, backend only, NEVER expose to frontend)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxx

# Database Direct Connection (for migrations and admin tasks)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# ====================================
# BACKEND CONFIGURATION (FastAPI)
# ====================================

# Server Environment
ENVIRONMENT=development
# Options: development, staging, production

# Server Port
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================================
# AI SERVICES
# ====================================

# Anthropic Claude API
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# OpenAI (Backup/Alternative)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# ====================================
# BANKING INTEGRATION (Future)
# ====================================

# Plaid API
# Get from: https://dashboard.plaid.com/
PLAID_CLIENT_ID=xxxxxxxxxxxxx
PLAID_SECRET=xxxxxxxxxxxxx
PLAID_ENV=sandbox
# Options: sandbox, development, production

# ====================================
# STORAGE & UPLOADS
# ====================================

# Maximum file size for receipts (bytes)
MAX_FILE_SIZE=10485760
# 10MB = 10485760 bytes

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# ====================================
# REDIS CACHE
# ====================================

# Redis URL
REDIS_URL=redis://localhost:6379
# For production: redis://username:password@host:port/db

# Redis Cache TTL (seconds)
REDIS_CACHE_TTL=3600
# 1 hour = 3600 seconds

# ====================================
# RATE LIMITING
# ====================================

# General API rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# AI API rate limit (requests per day)
AI_RATE_LIMIT_PER_DAY=1000

# ====================================
# EMAIL SERVICES
# ====================================

# SendGrid API Key (for notifications)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@wallai.app
SENDGRID_FROM_NAME=Wallai

# ====================================
# MONITORING & ANALYTICS
# ====================================

# Sentry DSN (Error Tracking)
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx

# PostHog API Key (Analytics)
POSTHOG_API_KEY=phc_xxxxxxxxxxxxx
POSTHOG_HOST=https://app.posthog.com

# ====================================
# FRONTEND CONFIGURATION (React/Vite)
# ====================================

# Vite requires VITE_ prefix for client-side variables
VITE_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxx
VITE_API_URL=http://localhost:8000
VITE_POSTHOG_KEY=phc_xxxxxxxxxxxxx

# ====================================
# MOBILE CONFIGURATION (React Native/Expo)
# ====================================

# Expo requires EXPO_PUBLIC_ prefix for client-side variables
EXPO_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxx
EXPO_PUBLIC_API_URL=http://localhost:8000

# ====================================
# DEPLOYMENT TOKENS
# ====================================

# Vercel (Web Frontend)
VERCEL_TOKEN=xxxxxxxxxxxxx
VERCEL_ORG_ID=xxxxxxxxxxxxx
VERCEL_PROJECT_ID=xxxxxxxxxxxxx

# Railway (Backend API)
RAILWAY_TOKEN=xxxxxxxxxxxxx

# Expo EAS (Mobile Apps)
EXPO_TOKEN=xxxxxxxxxxxxx

# ====================================
# SECURITY & CREDENTIALS
# ====================================

# User credentials for development/testing
# WARNING: Change these in production!
DEV_USER_EMAIL=dev@jappi.ca
DEV_USER_PASSWORD=Password123

# Default admin user (created on first run)
ADMIN_EMAIL=admin@wallai.app
ADMIN_PASSWORD=ChangeMe123!

# ====================================
# FEATURE FLAGS
# ====================================

# Enable/disable features
FEATURE_AI_CHAT=true
FEATURE_BANK_INTEGRATION=false
FEATURE_PRICE_INTELLIGENCE=false
FEATURE_MOBILE_APP=false

# ====================================
# NOTES
# ====================================
# 1. Copy this file to .env before running the application
# 2. Fill in all xxxxxxxxxxxxx placeholders with actual values
# 3. Generate SECRET_KEY with: openssl rand -hex 32
# 4. Never commit .env to git (it's in .gitignore)
# 5. For production, use environment variables from hosting platform
# 6. Keep SUPABASE_SERVICE_KEY secret - never expose to frontend
# 7. Update CORS_ORIGINS with your actual domains in production
